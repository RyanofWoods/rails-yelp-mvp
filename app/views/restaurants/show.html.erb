<h2><%= @restaurant.name %></h2>
<ul>
  <li><%= @restaurant.address %></li>
  <li><%= @restaurant.phone_number %></li>
  <li><%= @restaurant.category %></li>
</ul>

<hr>
  <h4>Leave a review</h4>
  <%= render 'review-form' %>

<hr>

<h3>Reviews:</h3>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li>
      <%= review.rating %> - 
      <%= review.content %>
    </li>
<% end %>
</ul>